@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');
@import './custom-radio.styl';

@import './variables.styl';

html, body {
    font-family: $fonte;
}

#app {
    font-family: $fonte;
}
.head-actions {
    width: 100%;
}

table {
    width: 100%;
    max-width: 100%;
    border-collapse: collapse;
    a {
        &.btn-table {
            font-size: 21px;
        }
        &.btn-edit {
            color: $amarelo;
        }
        &.btn-delete {
            color: $vermelho;
        }
    }
    thead {
        border: 2px solid #333652;
        tr {
            background: #333652;
            width: 100%;
            height: 54px;
            th {
                font-family: $fonte;
                font-style: normal;
                font-weight: 500;
                font-size: 18px;
                line-height: 21px;
                color: $brancoFonte;
                text-align left;
                vertical-align: middle;
            }
        }
    }
    tbody {
        border: 2px solid #333652;
        tr {
            width: 100%;
            height: 54px;
            &:nth-of-type(even) { 
                background-color: rgba(218, 218, 218, 0.2);
            }
            td {
                font-family: $fonte;
                font-style: normal;
                font-weight: 500;
                font-size: 18px;
                line-height: 21px;
                color: $roxoTable;
                vertical-align: middle;
            }
        }
    }
}

.forms {
    width: 100%;
    max-width: 100%;
    margin-top: 30px;
    .column {
        width: 49%;
    }
    .suround-question {
        border: 2px solid #333652;
        box-sizing: border-box;
        border-radius: 5px;
        padding: 18px 23px;
    }
    .suround-questions {
        border: 2px solid #333652;
        box-sizing: border-box;
        border-radius: 5px;
        .question {
            padding: 15px 15px;
            label {
                margin-bottom: 0;
            }
            a {
                font-size: 18px;
                &.btn-edit {
                    color: $amarelo;
                }
                &.btn-delete {
                    color: $vermelho;
                }
            }
            &:not(:first-child) { 
                border-top: 1px solid rgba(147, 145, 137, 0.5);
            }
        }
    }
}

.suround-keywords {
    min-height: 140px;
}
.keywords {
    height: auto;
    .keyword {
        font-family: $fonte;
        font-style: normal;
        font-weight: 500;
        font-size: 13px;
        line-height: 15px;
        color: $roxo;
        background: $amarelo;
        width: auto;
        height: 25px;
        padding: 5px;
        border-radius: 5px;
        a {
            margin-left: 15px;
            &.btn-remove-keyword {
                border: none;
                background: none;
                font-size: 13px;
                color: $roxo;
            }
        }
    }
}

span {
    &.validate {
        font-family: $fonte;
        font-style: normal;
        font-weight: 900;
        font-size: 14px;
        line-height: 21px;
        color: $vermelho;
    }
}

label {
    font-family: $fonte;
    font-style: normal;
    font-weight: 900;
    font-size: 18px;
    line-height: 21px;
    color: #000000;
    margin-bottom: 10px;
    small {
        font-family: inherit;
        font-style: inherit;
        font-weight: inherit;
        font-size: inherit;
        line-height: inherit;
        color: $vermelho;
    }
    &.not-big {
        font-weight: 500;
    }
    &.radio {
        font-size: 16px;
        font-weight: bold;
    }
}

select,
input {
    max-width: 100%;
    height: 50px;
    background: #F9F9F9;
    border: 2px solid #939189;
    border-radius: 5px;
    font-family: $fonte;
    font-style: normal;
    font-weight: bold;
    font-size: 18px;
    line-height: 21px;
    color: #282828;
    padding-left: 15px;
    padding-right: 5px;
    &::placeholder {
        color: #939189;
    }
    &:focus {
        border-color: $roxo;
    }
}

select {
    cursor: pointer;
	-webkit-appearance: none;
	background-image: url(../images/down-arrow.svg);
	background-repeat: no-repeat;
	background-position: 98%;
    background-size: 18px;
}

button {
    width: 169px;
    height: 50px;
    border-radius: 5px;
    font-family: $fonte;
    font-style: normal;
    font-weight: bold;
    font-size: 18px;
    line-height: 21px;
    text-align: center;
    cursor: pointer;
    &:hover {
        transform: scale(1.05);
    }
    &.white {
        background: #F9F9F9;
        border: 2px solid #F9F9F9;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
        color: #333652;
    }
    &.yellow {
        background: #FAD02C;
        border: 2px solid #FAD02C;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
        color: #333652;
    }
}

